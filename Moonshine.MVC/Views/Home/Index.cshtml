@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="newsApp" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>AngularJS Binding App</title>
  
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet/less" type="text/css" href="/Content/css/StyleSheet.less">
</head>
<body>
    <header>
        <div class="title">
            <h1>Le Nouillorque Times</h1>
        </div>
    </header>
    <div class="container">
        <div ng-controller="newsController" class="content">
            <a ng-repeat="article in news" repeat-end="onEnd()" data-id={{article.Id}} class="item" ng-class="appliedClass({{article.Category}})" data-toogle="modal" data-target="#myModal" role="button" data-title={{article.Title}} data-content={{article.Content}}>
                <div>
                    <div class="box-preamble">
                        <h3>{{article.Title}}</h3>
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="menu">
        <nav class="nav">
            <ul>
                <li onclick="politiqueFilter()">
                    <a>
                        <span class="glyphicon glyphicon-home"></span>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-tower"></span>
                        <span>Services</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-tree-conifer"></span>
                        <span>Portfolio</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-send"></span>
                        <span>Blog</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-certificate"></span>
                        <span>The team</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-bullhorn"></span>
                        <span>Contact</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body" id="myModalContent">

                </div>
            </div>
        </div>
    </div>

    <script src="/Scripts/less.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Scripts/angular.js" type="text/javascript"></script>
    <script src="/Scripts/angularNewsController.js" type="text/javascript"></script>
    <!-- <script src="/Scripts/isotope.pkgd.min.js" type="text/javascript"></script> -->
    <!-- <script src="/Scripts/angular-isotope.min.js" type="text/javascript"></script> -->
    <!-- <script src="/Scripts/isotope-init.js" type="text/javascript"></script> -->

</body>
</html>